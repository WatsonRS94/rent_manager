<% content_for :title do %>
  <title>NishAlugeis - Usuários</title>
<% end %>
<% content_for :styles do %>
  <style>
    .content-wrapper{
        background-color: #dddddd;
    }
  </style>
<% end %>

<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1><i class="fas fa-users"></i> Usuários</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="<%= admin_dashboard_path %>>">Início</a></li>
          <li class="breadcrumb-item active">Usuários</li>
        </ol>
      </div>
    </div>
  </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header clearfix">
            <h3 class="card-title float-left">Usuários Registrados</h3>
            <%= link_to new_admin_user_path, class: "btn btn-sm bg-gradient-success float-right", data: { remote: true, disable_with: "Carregado..." } do %>
              Adicionar Usuário
              <i class="fas fa-user-plus"></i>
            <% end %>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <div class="callout">
              <%= form_tag search_admin_users_path, method: :get, remote: true do %>
                <div class="form-group">
                  <div class="row">
                    <div class="col-lg-3">
                      Pesquisa:
                    </div>
                    <div class="col-lg-3">
                      <%=  %>
                    </div>
                  </div>
                </div>

              <% end %>
            </div>
            <%= render "table_users" %>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
<!-- /.content -->

<script type="text/javascript" charset="utf-8">
    $('.tip').tooltip();
</script>
<h1>Login</h1>



<%= form_tag admin_authenticate_path do %>
  <span class="text-danger"><%= flash[:error] if !flash[:error].blank? %></span>
  <div class="field">
    <%= label_tag :email %>
    <%= email_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Entrar" %>
  </div>
<% end %>